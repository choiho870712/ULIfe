<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationUI.userInfo.PersonFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/shop_canvas_foreground"
        android:scaleType="centerCrop"
        android:scaleX="1.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_person_icon_boy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/bird_salute_foreground"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的檔案"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@mipmap/tool_store_tou_foreground"
            android:scaleX="20"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/tool_store_pic2"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_tool_box_empty_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_1_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/text_tool_box_empty_1_1"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_1_1"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:text=""/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_tool_box_empty_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_1_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/text_tool_box_empty_1_2"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_1_2"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_1_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_1_3"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/tool_store_pic2"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_tool_box_empty_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_2_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/text_tool_box_empty_2_1"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_2_1"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_tool_box_empty_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_2_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/text_tool_box_empty_2_2"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_2_2"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_2_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_2_3"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/tool_store_pic2"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_tool_box_empty_3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_3_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/text_tool_box_empty_3_1"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_3_1"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_3_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_3_2"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tool_box_empty_3_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/tool_store_empty_box_foreground"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tool_box_square_text_box"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/image_tool_box_empty_3_3"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"/>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>