<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentPermission.StudentPermissionFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/shop_canvas_foreground"
        android:scaleType="centerCrop"
        android:scaleX="1.5"/>

    <LinearLayout
        android:id="@+id/layout_student_permission"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/edit_student_ID_permission"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="學號"
            android:textAlignment="center"
            android:background="@drawable/tool_box_square_text_box"
            />

        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/edit_student_password_permission"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="itouch 密碼"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:background="@drawable/tool_box_square_text_box"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_margin="20dp"
                android:id="@+id/button_student_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="認證"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_student_permission_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/student_permission_card_foreground" />

            <TextView
                android:layout_marginTop="150dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/text_student_permission_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="CYCU"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end" />

            <TextView
                android:layout_marginEnd="20dp"
                android:id="@+id/text_student_permission_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:layout_below="@+id/text_student_permission_school"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="已完成學生身份認證"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</FrameLayout>