<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationSendFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推撥訊息給所有訂閱者"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="end"/>

            <EditText
                android:id="@+id/edit_send_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="輸入訊息"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_weight="4"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_send_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_edit_submit_button"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_my_own_notification"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>