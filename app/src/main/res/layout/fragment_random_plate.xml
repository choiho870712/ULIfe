<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".discountTicket.RandomPlateFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteSmoke"
        android:scaleType="centerCrop"
        android:scaleX="1.5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天晚上12點重置抽獎次數"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_notification_shop_main"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/layout_food_plate"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button_random_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="轉 ！！"
                android:padding="5dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_notification_shop_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="今日剩餘次數 : "
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/text_random_price_count_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:text="3"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/button_goto_discount_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/random_food_price_foreground"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/layout_food_plate"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/layout_food_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_random_food_plate_leg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_random_food_plate_leg"
                android:layout_below="@id/image_random_food_plate_board"
                android:layout_marginTop="-30dp"/>

            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/image_random_food_plate_board"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_random_food_plate_board" />

            <ImageView
                android:id="@+id/image_random_food_plate_pointer"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_random_food_plate_pointer"
                android:layout_above="@+id/image_random_food_plate_board"
                android:layout_marginBottom="-90dp"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>