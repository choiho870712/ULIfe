<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_photoshot_information_person_section1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/text_company_information_person_section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_photoshot_information_person_section1"
            android:text="company"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_photoshot_information_person_section1"
            android:layout_below="@id/text_company_information_person_section1"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/text_friendCount_information_person_section1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0\n好友"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_followerCount_information_person_section1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0\n追蹤"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_selfIntroduction_information_person_section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="self introduction"
            android:textSize="20sp"
            android:layout_weight="97"/>

        <TextView
            android:id="@+id/text_showAll_information_person_section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="顯示全部"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_tag_information_person_section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="關鍵字："
            android:textSize="20sp"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>