<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteSmoke">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_card_notifications"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@mipmap/creat_account_bird_foreground"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/notification_card_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_card_notifications"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_author_card_notifications"
                android:text="author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/text_viewCount_card_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="觀看次數 0"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_date_card_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="date"/>

            <TextView
                android:id="@+id/text_message_card_notifications"
                android:text="@string/chat_card_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
