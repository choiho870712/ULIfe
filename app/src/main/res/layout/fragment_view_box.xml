<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".complaint.ViewBoxFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/shop_canvas_foreground"
        android:scaleType="centerCrop"
        android:scaleX="1.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="謝謝你回饋建議給我們"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="end"/>

            <EditText
                android:id="@+id/edit_send_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="建議"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_weight="4"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_send_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_edit_submit_button"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>