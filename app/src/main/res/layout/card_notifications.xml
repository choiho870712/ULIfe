<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_card_notifications"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_margin="10dp"
            android:src="@mipmap/icon_boy"/>

        <LinearLayout
            android:id="@+id/notification_card_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_card_notifications"
            android:layout_toStartOf="@id/notification_card_add_friend"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_author_card_notifications"
                android:text="author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/text_viewCount_card_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="觀看次數 0"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/text_date_card_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="date"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/text_message_card_notifications"
                android:text="@string/chat_card_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_card_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_accept_friend_notification"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="接受"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_delete_friend_notification"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="拒絕"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
